package com.epam.lab.developers.game.map.unit;

public class UnitStatus {

	private double codeMultiplier=1;//множник для швидкості написання коду, напряму залежить від настрою ситості і життя
	private double mood = 10;//настрій юніта, якщо ситість і здоровя нормальні
	private double bellyful=12; // ситість юніта, залежить від кількості випитої кави і зїдженої їжі
	private double healt =13; //здоров'я, змінюється коли бються
	
	public UnitStatus(double codeMultiplie, double mood, double bellyful, double healt ) {
		this.bellyful = bellyful;
		this.healt= healt;
		this.codeMultiplier = codeMultiplie;
		this.mood = mood;
	}

	public double getCodeMultiplier() {
		return codeMultiplier;
	}

	public void setCodeMultiplier(double codeMultiplier) {
		this.codeMultiplier = codeMultiplier;
	}

	public double getMood() {
		return mood;
	}

	public void setMood(double mood) {
		this.mood = mood;
	}

	public double getBellyful() {
		return bellyful;
	}

	public void setBellyful(double bellyful) {
		this.bellyful = bellyful;
	}

	public double getHealt() {
		return healt;
	}

	public void setHealt(float healt) {
		this.healt = healt;
	}
	
	
}
