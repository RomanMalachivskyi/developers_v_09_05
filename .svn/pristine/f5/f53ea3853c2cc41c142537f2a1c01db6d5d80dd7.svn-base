@CHARSET "UTF-8";

/*стиль фото користувача*/
#userPhotoImg {
	width: 200px;
    border: 2px solid; 
    border-color: #2D3861;
    cursor: pointer;
}

/*інформація про користувача*/
#userInfo {
	margin-top: 20px;
	text-align: center;
	font-size: 16pt;
	font-family: Tahoma, Arial;  
	line-height: 1.2;
	font-style: bold;    
}

/*статистика користувача (кількість виграшів і т.д.)*/
#userStats {
	margin-top: 20px;
	float: left;
	width: 700px;
	font-size: 16pt;
	font-family: Tahoma, Arial;
	line-height: 1.2; 
	font-style: bold;    
}

#divFormUploadContainer {
	position: absolute;
	top: 50%;
	left: 0px;
	width: 100%;
	height: 1px;
	overflow: visible;
}

#divFormUpload {
	border: 2px solid ;
	padding: 10px;
	width: 300px;
	height: 100px;
	margin-left: -150px;
	position: absolute;
	top: -50px;
	left: 50%;
	display: none;
	opacity: 0.8;
	
    background-image: linear-gradient(bottom, rgb(32,40,46) 35%, rgb(30,44,66) 68%, rgb(0,0,0) 100%);
    background-image: -o-linear-gradient(bottom, rgb(32,40,46) 35%, rgb(30,44,66) 68%, rgb(0,0,0) 100%);
    background-image: -moz-linear-gradient(bottom, rgb(32,40,46) 35%, rgb(30,44,66) 68%, rgb(0,0,0) 100%);
    background-image: -webkit-linear-gradient(bottom, rgb(32,40,46) 35%, rgb(30,44,66) 68%, rgb(0,0,0) 100%);
    background-image: -ms-linear-gradient(bottom, rgb(32,40,46) 35%, rgb(30,44,66) 68%, rgb(0,0,0) 100%);
    
    background-image: -webkit-gradient(
        linear,
        left bottom,
        left top,
        color-stop(0.35, rgb(32,40,46)),
        color-stop(0.68, rgb(30,44,66)),
        color-stop(1, rgb(0,0,0))
    );
}


.userStatValue{
    font-style: italic;
    font-size: 17px;
}

.userInfoTableClass{
    text-align: left;
}

