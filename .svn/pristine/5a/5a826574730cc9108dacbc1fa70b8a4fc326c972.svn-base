@CHARSET "UTF-8";

#gameHeader {
	position: absolute;
	margin: 0 auto;
	line-height:39px;
    font-family: Tahoma, Arial;
    background: url(../../img/theme/body_top_bckg.jpg) no-repeat center top #171c20;
    color:#bed7e6;
    font-size:11px;
    height: 370px;
    width: 1000px;
    left: 0;
    right: 0;
}

#divMenuToggler {
	width: 1000px;
	height: 30px;
	left: 0;
    right: 0;
	margin: -33px auto 0 auto;
}

#menuToggler {
	display: none;
	width: 1000px;
	height: 30px;
	margin: 0 auto;
	background: url(../../img/theme/menu_toggle.jpg) -1px;
}

#gameContent {
	width: 1000px;
	margin: 30px auto 0 auto;
}

#gameMain {
	background: url(../../img/theme/body_all_bckg_game.jpg) repeat-y top center;
}

#gameName {
	margin-bottom: 10px;
	text-align: center;
    font-size: 16pt;
    font-family: "Trebuchet MS", "Verdana";
}

#divPlayers {
	height: 100px;
	margin-bottom: 20px;
    text-align: center;
    font-family: "Trebuchet MS", "Verdana";
}

#divPlayerYou {
	width: 100px;
	height: inherit;
	float: left;
	font-size: 10pt;
}

#youPlayerImg {
	width: 80px;
	margin: 0 auto;
}

.divPlayerOpponents {
	width: 100px;
	height: inherit;
	float: right;
	font-size: 10pt;
}

.opponentPlayerImg {
	width: 80px;
}

#divCanvas {
	width: 1000px;
	margin: 0 auto;
}

#unitOptions {border: 1px white solid;
	width: 1000px;
	height: 100px;
	margin: 10px auto 0 auto;
}

