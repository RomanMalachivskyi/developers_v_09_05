	}

	
	@Override
	public void action() {
		
	if(task.getTargetX()/50+1==x/50&&task.getTargetX()/50-1==x/50||
	   task.getTargetY()/50+1==x/50&&task.getTargetY()/50-1==x/50) this.move(x, y);
		
		
		switch (task.getTask()){
		case "move"   	 :   this.move(1, 2);
			break;	
		case "code"		 :   this.code();
			break;
		case "use" 		 :   this.use();
			break;
		case "repair"	 :   this.repair();
			break;
		case "breakDown" :   this.breakDown();
			break;
		
		default : System.err.println("unknown method");
			}
		 
	}



