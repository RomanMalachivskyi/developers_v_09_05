	String state = "nonUsed";
	
	protected Map<String, ArrayList<String>> availableMethods=new HashMap<>();
	


	ArrayList<String> tmp;
	
	

	public ActiveObject(int x, int y, int rotationAngle, String path) {
		super(x, y, rotationAngle, path);
		// TODO Auto-generated constructor stub	
			tmp= new ArrayList<String>();
			tmp.add("use"); tmp.add("repair");tmp.add("breakDown");
		availableMethods.put(JuniorDeveloper.class.toString(),tmp);
		availableMethods.put(MiddleDeveloper.class.toString(),tmp);			
		availableMethods.put(SeniorDeveloper.class.toString(),tmp);		
		
	}

	public void use(){
	
	}
	
	public ArrayList<String> getAvailableMethods(String unit) {
		return availableMethods.get(unit);
	}
	
	public void action(UnitStatus status) {
		
		switch (state){
		
		case "use"		 :   this.use();
			break;
			
		case "repair"		 :   this.repair();
			break;
			
		case "breakDown"		 :   this.breakDown();
			break;
		
		default : System.err.println("unknown method");
			}	
		
	}


