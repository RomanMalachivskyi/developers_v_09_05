@CHARSET "UTF-8";

/*стиль фото користувача*/
#userPhotoImg {
	width: 200px;
    border: 2px solid; 
    border-color: #2D3861;
    cursor: pointer;
}

/*інформація про користувача*/
#userInfo {
	margin-top: 20px;
	text-align: center;
	font-size: 16pt;
	font-family: Tahoma, Arial;  
	line-height: 1.2;
	font-style: bold;    
}

/*статистика користувача (кількість виграшів і т.д.)*/
#userStats {
	margin-top: 20px;
	float: left;
	width: 400px;
	font-size: 16pt;
	font-family: Tahoma, Arial;
	line-height: 1.2; 
	font-style: bold;  

}

#divFormUploadContainer {
	position: absolute;
	top: 55%;
	left: 0px;
	width: 100%;
	height: 1px;
	overflow: visible;
}

#divFormUpload {
	padding: 10px;
	width: 227px;
	height: 100px;
	margin-left: -150px;
	position: absolute;
	left: 50%;
	display: none;
	opacity: 0.8;

}


.userStatValue{
    font-style: italic;
    font-size: 17px;
}

.userInfoTableClass{
    text-align: left;
}

