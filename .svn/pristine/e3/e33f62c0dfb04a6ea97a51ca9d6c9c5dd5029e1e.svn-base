package com.epam.lab.developers.servlet.json;

import java.util.ArrayList;
import java.util.List;

import com.epam.lab.developers.game.map.unit.Unit;

public class UnitJson {

	private String currentTexture;
	private int id;
	private int x;
	private int y;
	private int rotationAngle;
	
	public UnitJson(String currentTexture, int id, int x, int y,
			int rotationAngle) {
		this.currentTexture = currentTexture;
		this.id = id;
		this.x = x;
		this.y = y;
		this.rotationAngle = rotationAngle;
	}
	
	
	public static List<UnitJson> parseUnitListToJsonUnitList(List<Unit> units){
		
		List<UnitJson> jsonUnits = new ArrayList<>();
		for(Unit unit:units ){
			//to update for current unit texture
			jsonUnits.add(new UnitJson(unit.getTextures().get(0), unit.getId(), unit.getX(), unit.getY(), unit.getRotationAngle()));
		}
		
		return jsonUnits;
		
	}
}
